.container
    .row
        .col-md-12
            .divider
            .score.pull-left#left Gauche: {{gameStatus.left.score}}
            .score.pull-right#right Droite: {{gameStatus.right.score}}
            .clearfix
            .col-md-6.text-left {{gameStatus.left.players}} joueurs
            .col-md-6.text-right {{gameStatus.right.players}} joueurs
            .divider
            .divider
            .text-center 
                p Vous jouez à {{user.role=='left'?'gauche':'droite'}}
            button.btn.up(data-role="button" type="button" ng-click="sendInput('up')" class="{{user.role}}") ↑
            button.btn.down(data-role="button" type="button" ng-click="sendInput('down')" class="{{user.role}}") ↓
            
